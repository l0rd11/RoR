<table border="0"  cellpadding = "15">

  <tr>
    <td><h3>posts</h3></td>
    <td>Posted at </td>
    <td>Comments</td>
  </tr>
  <% @respond.each do |post,comments| %>
      <tr>
        <td><%= post["message"]%> </td>
        <td><%= post["created_time"]%> </td>
                <td>
          <%  comments.each do |comment| %>
            <li><%= comment["message"]%></li>
          <% end %>
              </td>
        <td>
                   <%= link_to("Delete ", facebook_path(post["id"]), :data => { :confirm => "Czy jesteÅ› pewny?" }, :method => :delete, :class => 'button-xs')  %>
        </td>

      </tr>

  <% end %>

</table>
<br>
<%= link_to 'New Post', new_facebook_path %>
<br><br>
<%= link_to 'Previous', url_for(:page => @posts.previous_page_params) %>
<%= link_to 'Next', url_for(:page => @posts.next_page_params) %>

